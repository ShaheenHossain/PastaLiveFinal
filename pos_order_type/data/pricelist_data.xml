<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="pricelist_zero" model="product.pricelist">
            <field name="name">Zero Pricelist</field>
            <field name="sequence">4</field>
            <field name="has_zero_price" eval="True"/>
        </record>

        <record id="pricelist_zero_item" model="product.pricelist.item">
            <field name="base">list_price</field>
            <field name="applied_on">3_global</field>
            <field name="pricelist_id" ref="pricelist_zero"/>
            <field name="compute_price">fixed</field>
            <field name="fixed_price">0.00</field>
        </record>

    </data>
</odoo>