<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PosTicketKitchen">
        <div class="pos-sale-ticket kitchen_receipt" style="padding-right: 25px;">
            <strong>
                <div class="pos-center-align"><t t-esc="order.formatted_validation_date"/> <t t-esc="order.name"/></div>
                <t t-if="widget.pos.config.enable_invoive_prefix">
                    <div style="text-align:center;">
                        <b><h2><t t-esc ="receipt.ticket_number"/></h2></b>
                    </div>
                </t>
                <div>
                    <center>
                        <t t-esc="receipt.dine_option"/>
                    </center>
                </div>
                <br />
                <table class='receipt-orderlines'>
                    <thead>
                        <th width='40%'>Item</th>
                        <th class="pos-right-align rtl_layout" width='20%'>Qty</th>
                        <th class="pos-right-align rtl_layout" width='20%'>Price</th>
                        <th class="pos-right-align rtl_layout" width='20%'>Total</th>
                    </thead>
                    <tr t-foreach="orderlines" t-as="orderline" style="height: 40px !important;">
                        <td>
                            <t t-esc="orderline.get_product().display_name"/>
                             <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    With a <t t-esc="orderline.get_discount()"/>% discount
                                </div>
                            </t>
                        </td>
                        <td class="pos-right-align rtl_layout">
                            <t t-esc="orderline.get_quantity()"/>
                        </td>
                        <td class="pos-right-align rtl_layout">
                            <t t-esc="orderline.get_unit_display_price()"/>
                        </td>
                        <td class="pos-right-align rtl_layout">
                            <t t-esc="widget.format_currency_no_symbol(orderline.get_display_price())"/>
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-total'>
                    <tr>
                        <td>Subtotal:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency_no_symbol(order.get_total_without_tax())"/>
                        </td>
                    </tr>
                    <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                        <tr>
                            <td><t t-esc="taxdetail.name" /></td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency_no_symbol(taxdetail.amount)" />
                            </td>
                        </tr>
                    </t>
                    <tr>
                        <t t-if="order.get_total_discount() > 0">
                            <td>Discount:</td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency_no_symbol(order.get_total_discount())"/>
                            </td>
                        </t>
                    </tr>
                    <tr class="emph">
                        <td>Total:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency_no_symbol(order.get_total_with_tax())"/>
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-paymentlines'>
                    <t t-foreach="paymentlines" t-as="line">
                      <tr>
                          <td>
                              <t t-esc="line.name"/>
                          </td>
                          <td class="pos-right-align">
                              <t t-esc="widget.format_currency_no_symbol(line.get_amount())"/>
                          </td>
                      </tr>
                    </t>
                </table>
                <br />
                <table class='receipt-change'>
                    <tr><td>Change:</td><td class="pos-right-align">
                        <t t-esc="widget.format_currency_no_symbol(order.get_change())"/>
                        </td></tr>
                </table>
            </strong>
        </div>
    </t>

    <t t-extend="PosTicket">
        <t t-jquery=".receipt-user" t-operation="replace"/>
        <t t-jquery=".receipt-orderlines" t-operation="before">
            <div>
                <center>
                    <t t-esc="receipt.dine_option"/>
                </center>
            </div>
            <br/>
        </t>
        <t t-jquery=".pos-sale-ticket" t-operation="attributes">
            <attribute name="style">padding-left: 80px;</attribute>
        </t>

        <t t-jquery="[t-esc='orderline.get_quantity_str_with_unit()']" t-operation="replace">
            <t t-esc="orderline.get_quantity()"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(orderline.get_display_price())']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(orderline.get_display_price())"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(order.get_total_without_tax())']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(order.get_total_without_tax())"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(taxdetail.amount)']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(taxdetail.amount)"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(order.get_total_discount())']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(order.get_total_discount())"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(order.get_total_with_tax())']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(order.get_total_with_tax())"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(line.get_amount())']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(line.get_amount())"/>
        </t>
        <t t-jquery="[t-esc='widget.format_currency(order.get_change())']" t-operation="replace">
            <t t-esc="widget.format_currency_no_symbol(order.get_change())"/>
        </t>

        <t t-jquery="[t-esc='widget.pos.company.name']" t-operation="replace"/>
        <t t-jquery="[t-esc='order.formatted_validation_date']" t-operation="replace"/>
        <t t-jquery="[t-esc='order.formatted_validation_date']" t-operation="replace"/>
        <t t-jquery="[t-esc='order.name']" t-operation="replace"/>
        <t t-jquery="[t-if='widget.pos.config.enable_invoive_prefix']" t-operation="replace">
            <div style="text-align:center;">
                <b><h2><t t-esc ="receipt.ticket_number"/></h2></b>
            </div>
        </t>
        <t t-jquery="[t-if='receipt.header']" t-operation="replace">
            <div style='text-align:center; margin-top: -20px;'>
                <t t-raw="receipt.header" />
                <div class="text-right" style="display: flex;text-align: left;margin-bottom: 10px;">
                    <div class="receipt-user pos-text-left-rtl" style= "flex: 1 1 70%;">
                        <div>
                            Invoice No: <t t-esc="receipt.order_name"/>
                        </div>
                        <div class="receipt-user">
                            User: <t t-esc="widget.pos.get_cashier().name"/><br />
                        </div>
                    </div>
                    <div class="pos-text-right-rtl" style= "flex: 1 1 30%;text-align: right;">
                        <div>
                            <t t-esc="receipt.receipt_date"/>
                        </div>
                        <div>
                            <t t-esc="receipt.receipt_time"/>
                        </div>
                    </div>
                </div>
            </div>
        </t>
        <t t-jquery="[t-esc='widget.pos.company.name']" t-operation="attributes">
            <attribute name="style">display: none;</attribute>
        </t>
        <t t-jquery=".receipt-phone" t-operation="attributes">
            <attribute name="style">display: none;</attribute>
        </t>
        <t t-jquery="[t-if='receipt.footer']" t-operation="replace">
            <div style='text-align:center;'>
                <t t-raw="receipt.footer" />
            </div>
        </t>
        <t t-jquery=".receipt-orderlines colgroup" t-operation="replace">
            <thead>
                <th width='40%'>Item</th>
                <th class="pos-right-align rtl_layout" width='20%'>Qty</th>
                <th class="pos-right-align rtl_layout" width='20%'>Price</th>
                <th class="pos-right-align rtl_layout" width='20%'>Total</th>
            </thead>
        </t>
        <t t-jquery="[t-foreach='orderlines'] td:nth-child(2)" t-operation="after">
            <td class="pos-right-align rtl_layout">
                <t t-esc="orderline.get_unit_display_price()"/>
            </td>
        </t>
        <t t-jquery="[t-foreach='orderlines'] td:nth-child(2)" t-operation="attributes">
            <attribute name="class">pos-right-align rtl_layout</attribute>
        </t>
        <t t-jquery="[t-foreach='orderlines'] td:nth-child(4)" t-operation="attributes">
            <attribute name="class">pos-right-align rtl_layout</attribute>
        </t>

        <t t-jquery=".pos-sale-ticket" t-operation="after">
            <div style="page-break-before: always;"/>
            <t t-call="PosTicketKitchen"/>
            <div style="page-break-before: always;"/>
        </t>
    </t>

    <t t-extend="PaymentScreenWidget">
        <t t-jquery=".paymentmethods-container" t-operation="after">
            <select name='dine_in_out' id="dine_in_out" class="dine">
                <option value='' selected="selected">Select Dine In / Dine Out</option>
                <option value='سفري'>Dine In</option>
                <option value='محلي'>Dine Out</option>
            </select>
        </t>
    </t>

</templates>
