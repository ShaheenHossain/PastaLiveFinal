<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_inventory_analysis_view" model="ir.ui.view">
        <field name="name">Inventory Movement</field>
        <field name="model">stock.inventory.report</field>
        <field name="arch" type="xml">
            <form string="Stock Inventory Analysis">
                <group col="4">
                    <field name="from_date" required="1" widget="date"/>
                    <field name="to_date" required="1" widget="date"/>
                    <field name="warehouse_id" domain="[('company_id', '=', company_id)]" options="{'no_create_edit': 1, 'no_open': 1}"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create_edit': 1, 'no_open': 1}"/>
                    <field name="available_in_pos"/>
                    <!-- <field name="location_ids" domain="[('company_id', '=', company_id)]" widget="many2many_tags"/> -->
                </group>
                <separator string="Filter"/>
                <group>
                    <field name="filter_by"/>
                    <field name="product_categ_ids" widget="many2many_tags" attrs="{'invisible': [('filter_by', '!=', 'category')]}" options="{'no_create_edit': 1, 'no_open': 1}"/>
                    <field name="product_ids" domain="[('company_id', 'in', [company_id,False])]" widget="many2many_tags" attrs="{'invisible': [('filter_by', '!=', 'product')]}" options="{'no_create_edit': 1, 'no_open': 1}"/>
                    <field name="branch_ids" widget="many2many_tags"/>
                </group>
                <group attrs="{'invisible': [('data', '=', False)]}">
                    <field name="data" colspan="4" invisible="1"/>
                    <field name="name" filename="data" colspan="4"/>
                </group>
                <footer>
                    <button string="Print PDF" name="generate_pdf_report" type="object" class="btn-primary"/>
                    <button string="Print Excel" name="print_excel" type="object" class="btn-primary"/>
                    <button string="Pivot/Graph" name="print_pivot" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_inventory_analysis" model="ir.actions.act_window">
        <field name="name">Inventory Movement</field>
        <field name="res_model">stock.inventory.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_inventory_analysis_view"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Inventory Movement" id="stock_inventory_analysis" action="action_stock_inventory_analysis" parent="stock.menu_warehouse_report" sequence="1"/>
</odoo>